% layout 'default';
% title 'Item Info';
<h1><%= $item->name %></h1>
<table>
  <tr>
    <th>Cost</th>
  </tr>
  <tr>
    <td><%= $item->cost . ' ' . $item->currency %></td>
  </tr>
</table>
% if ($img_file) {
%= image $img_file, style => "width:200px;height:200px;"
% }
% if ($character_id) {
<form method=POST action="/character/<%= $character_id %>/purchase_item/<%= $item->id %>">
<input type="submit" value="Purchase">
</form>
% }
