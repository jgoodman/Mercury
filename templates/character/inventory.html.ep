% layout 'default';
% title 'Welcome';
<p>
  Character inventory
</p>
<table>
  <tr>
    <th>Name</th>
    <th>Cost</th>
    <th>Qty</th>
  </tr>
% for my $item (@$items) {
  <tr>
    <td><%= link_to $item->{'name'} => '/item/' . $item->{'id'} . '?character_id=' . $character_id %></td>
    <td><%= $item->{'cost'} %></td>
    <td><%= $item->{'qty'} %></td>
  </tr>
% }
</table>

