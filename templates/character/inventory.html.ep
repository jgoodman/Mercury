% layout 'default';
% title 'Welcome';
<p>
  Character inventory
</p>
<table>
  <tr>
    <th>Name</th>
    <th>Cost</th>
    <th>Qty</th>
  </tr>
% for my $slot ($character->inventory) {
  <tr>
    <td><%= link_to $slot->item->name => '/item/' . $slot->item->id . '?character_id=' . $character->id %></td>
    <td><%= $slot->item->cost . ' ' . $slot->item->currency %></td>
    <td><%= $slot->qty %></td>
  </tr>
% }
</table>

